{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "grandt/phpepub",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/Grandt/PHPePub",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "classmap": ["EPub.php", "EPub.HtmlEntities.php", "EPub.NCX.php", "EPub.OPF.php", "EPubChapterSplitter.php", "lib.uuid.php", "Logger.php", "Zip.php"]
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "../web/assets/select2",
                "version": "master",
                 "source": {
                    "url": "https://github.com/ivaynberg/select2",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "silex/silex"  : "~1.1",
        "doctrine/dbal": "2.2.*",
        "twig/twig": ">=1.8,<2.0-dev",
        "symfony/twig-bridge": "~2.3",
        "mobiledetect/mobiledetectlib": "~2",
        "symfony/translation": "~2.3",
        "symfony/config": "~2.3",
        "symfony/yaml": "~2.3",
        "symfony/security": "~2.3",
        "symfony/form": "~2.3",
        "symfony/validator": "~2.3",
        "grandt/phpepub": "@dev",
        "lexpress/console-service-provider": "1.0.*@dev",
        "../web/assets/select2": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/dbunit": ">=1.2",
        "symfony/browser-kit": ">=2.3,<2.4-dev"
    },
    "autoload": {
        "psr-0": {"Cops": "app/cops"}
    },
    "scripts": {
        "post-install-cmd": "Cops\\Scripts\\ComposerUpdate::update",
        "post-update-cmd": "Cops\\Scripts\\ComposerUpdate::update"
    }
}